<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.androidyuhasz.ui.home.ListarFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_listar" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.androidyuhasz.ui.gallery.CargarFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_cargar" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.androidyuhasz.ui.slideshow.SalirFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/borrarFragment"
        android:name="com.example.androidyuhasz.ui.eliminar.BorrarFragment"
        android:label="fragment_borrar"
        tools:layout="@layout/fragment_borrar" >
        <action
            android:id="@+id/action_borrarFragment_to_detalleBorrarFragment"
            app:destination="@id/detalleBorrarFragment" />
    </fragment>
    <fragment
        android:id="@+id/detalleBorrarFragment"
        android:name="com.example.androidyuhasz.ui.eliminar.DetalleBorrarFragment"
        android:label="fragment_detalle_borrar"
        tools:layout="@layout/fragment_detalle_borrar" />
</navigation>